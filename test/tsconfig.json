{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "umd",
    "target": "es5",
    "outDir": "../build",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "../src",
    "./"
  ],
  "exclude": [
    "node_modules"
  ]
}
